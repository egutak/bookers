  <h1>Books</h1>
  <% if @book.errors.any? %>
   <%=@book.errors.count %>件のエラーが発生しました
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
      <span>
       <%= link_to "Show",book_path(book.id) %>
      </span>
     </td>
     <td>
      <span>
       <%= link_to "Edit",edit_book_path(book.id) %>
      </span>
     </td>
     <td>
      <span>
       <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
      </span>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>

  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
   <div class="field">

   <a>Title</a>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <a>Title</a>
    <%= f.text_area :body %>
   </div>

    <%= f.submit 'Create Book' %>
  <% end %>

 </body>

